@import solarized

table.sourceCode, tr.sourceCode, td.lineNumbers, td.sourceCode
  margin 0
  padding 0
  vertical-align baseline
  border none

table.sourceCode
  width 100%

td.lineNumbers
  line-height 100%
  text-align right
  padding-right 4px
  padding-left 4px
  color #aaaaaa
  border-right 1px solid #aaaaaa
  font-size 12pt

  pre
    margin 0
    padding 0
    line-height 100%

  a, a:link
    margin 0
    padding 0
    line-height 100%
    text-decoration none

td.sourceCode
  line-height 100%
  pre
    margin 0
    padding 0
    line-height 100%
  padding-left 5px
  font-size 12pt
  code.sourceCode
    line-height 100%

code > span.kw { color: blue; }
code > span.dt { color: magenta; }
code > span.dv { color: cyan; }
code > span.bn { color: cyan; }
code > span.fl { color: cyan; }
code > span.ch { color: yellow; }
code > span.st { color: green; }
code > span.co { color: base1; font-style: italic; }
code > span.ot { color: green; }
code > span.al { color: red; font-weight: bold; }
code > span.fu { color: yellow; }
code > span.er { color: red; font-weight: bold; }
